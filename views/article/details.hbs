<div class="container body-content">
    <div class="row">
        <div class="col-md-12">
            <article>
                <header>
                    <h2>{{article.title}}</h2>
                </header>

                <p>
                    {{article.content}}
                </p>
                {{#if article.imagePath}}
               <img src="{{article.imagePath}}" width="400" alt="Article Image">
                {{/if}}
                {{#if article.edit}}
                    <small class="author">
                        <br><p>At {{article.editDate}} the article was edited by {{article.editName}}.</p>
                    </small>
                {{else}}
                    <small class="author">
                        <br><p>At {{article.date}} the article was created by {{article.author.fullName}}.</p>
                    </small>
                {{/if}}
                <small class="author">
                    {{article.author.fullName}}
                </small>

                <footer>
                    <div class="pull-left">
                        {{# each article.tags}}
                            <a class="btn btn-default btn-xs" href="/tag/{{this.name}}">{{ this.name }}</a>
                        {{/each}}
                    </div>
                    <div class="pull-right">
                        {{#if isUserAuthorized}}
                        <a class="btn btn-success btn-xs" href="/article/edit/{{article.id}}">Edit &raquo;</a>
                        <a class="btn btn-danger btn-xs" href="/article/delete/{{article.id}}">Delete &raquo;</a>
                        {{/if}}
                        <a class="btn btn-default btn-xs" href="/">Back &raquo;</a>
                    </div>
                </footer>
            </article>
        </div>
    </div>
</div>
